<html>
<head>
    <meta name="viewport" content="width=device-width" />
   

    <style>
        body {
            color: black;
        }

        * {
            box-sizing: border-box;
        }

        .clearfix::after {
            content: "";
            clear: both;
            display: table;
        }

        .box {
            float: left;
            width: 100%;
            padding: 0px;
        }

        .boxHalf {
            float: left;
            width: 50%;
            padding: 0px;
            border: 1px solid gray;
        }

        .boxHeaderL {
            /*float: left;*/
            width: 20%;
            padding: 0px;
            text-align: left;
        }

        .boxHeaderR {
            /*float: left;*/
            width: 80%;
            padding: 0px;
            text-align: center;
        }

        .tblBox {
            border-collapse: collapse;
            width: 100%;
            padding: 0px;
            float: left;
        }

        .headingh3 {
            font-size: 15pt;
            font-family: 'Segoe UI';
            padding: 2px;
            text-decoration: underline;
        }

        th {
            border: 1px solid black;
            font-size: 10px;
            font-family: 'Segoe UI';
        }


        td {
            border: 1px solid black;
            font-size: 10px;
            font-family: 'Segoe UI';
        }


        h5, h4 {
            font-size: 10pt;
            font-family: 'Segoe UI';
        }

        h3 {
            font-size: 10pt;
            font-family: 'Segoe UI';
        }

        .buttomMargin {
            margin-bottom: -20px;
            padding-bottom: 0px;
        }

        .footer {
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
            background-color: red;
            color: white;
            text-align: center;
        }
    </style>
</head>
<body>
    <div style="width:100%; text-align:center; height:100%">

        <div style="width:100%;height:100%;">
            <hr style="background-color: #ede5e5;" />
            <table class="tblBox">
                <tbody>
                    <tr>
                        

                        <th style="text-align:left;width:10%;border:none"> <img src="~/images/NavkarLogo.jpeg" /></th>
                        <th style="width:80%;text-align:center;background-color:white;font-family: 'Segoe UI';border:none">
                            <spam style="width:80%;font-family: 'Segoe UI';font-weight:bold;font-size:20px">@ViewBag.CompanyName</spam>   <br />
                            <spam style="font-family: 'Segoe UI';font-size:small;font-weight:400"> @ViewBag.CompanyAddress</spam> <br />
                        
                            <spam style="font-family: 'Segoe UI';font-size:small;font-weight:400"> @ViewBag.GSTINNo</spam> <br />

                        </th>
                        <th style="text-align:left;width:10%;border:none"> <spam style="font-family: 'Segoe UI';font-size:small;font-weight:400;visibility:hidden"> @ViewBag.GSTINNo</spam></th>

                    </tr>

                </tbody>
            </table>
            <table class="tblBox" style="border:none !important">
                <tbody>
                    <tr>
                        <th style="width:100%;text-align:center; background-color: #ede5e5;font-size:15px;border:none">

                            COMPUTERISED WEIGHMENT SLIP
                        </th>
                    </tr>

                </tbody>
            </table>
            <span style="font-size:1px;visibility:hidden">.</span>

            <hr style="border: 0.5px solid;background-color: #ede5e5;" />
            <hr style="background-color: #ede5e5;" />


            @*<spam style="font-family: 'Calibri (Body)';font-size:small;font-weight:400;text-align:center">EXPORT-OUT</spam>*@
            <div class="printBody clearfix">
                <div class="box">
                    <table class="tblBox">
                        <tbody>
                            <tr>
                                <th style="width:15%;text-align:left;border:none;font-weight:bold">Slip No</th>
                                <td style="width:45%;text-align:left;border:none;">:<label style="visibility:hidden">Sp</label>     @ViewBag.ReceiptNo</td>
                                <th style="width:15%;text-align:left;border:none;font-weight:bold">Slip Date</th>
                                <td style="width:25%;text-align:left;border:none">:<label style="visibility:hidden;font-weight:400">Sp</label> @ViewBag.Addedon</td>

                            </tr>
                            <tr>
                                <th style="width:15%;text-align:left;border:none;font-weight:bold">Vehicle No</th>
                                <td style="width:45%;text-align:left;border:none">:<label style="visibility:hidden">Sp</label>     @ViewBag.VehicleNo</td>
                                <th style="width:15%;text-align:left;border:none;font-weight:bold">Vehicle Type</th>
                                <td style="width:25%;text-align:left;border:none">:<label style="visibility:hidden;font-weight:400">Sp</label> @ViewBag.VehicleType</td>

                            </tr>
                            <tr>
                                <th style="width:15%;text-align:left;border:none;font-weight:bold">Container No (1)</th>
                                <td style="width:45%;text-align:left;border:none">:<label style="visibility:hidden">Sp</label>     @ViewBag.ContainerNo</td>
                                <th style="width:15%;text-align:left;border:none;font-weight:bold">Tare Wt. (1)</th>
                                <td style="width:25%;text-align:left;border:none">:<label style="visibility:hidden;font-weight:400">Sp</label> @ViewBag.TareWeight</td>

                            </tr>
                            <tr>
                                <th style="width:15%;text-align:left;border:none;font-weight:bold">Container No (2)</th>
                                <td style="width:45%;text-align:left;border:none">:<label style="visibility:hidden">Sp</label>     @ViewBag.ContainerNo2</td>
                                <th style="width:15%;text-align:left;border:none;font-weight:bold">Tare Wt. (2)</th>
                                <td style="width:25%;text-align:left;border:none">:<label style="visibility:hidden;font-weight:400">Sp</label> @ViewBag.TareWeight2</td>

                            </tr>
                            <tr>
                                <th style="width:15%;text-align:left;border:none;font-weight:bold">Loaded Wt.</th>
                                <td style="width:45%;text-align:left;border:none">:<label style="visibility:hidden">Sp</label>     @ViewBag.GrossWeight</td>
                                <th style="width:15%;text-align:left;border:none;font-weight:bold">Loaded Date</th>
                                <td style="width:25%;text-align:left;border:none">:<label style="visibility:hidden;font-weight:400">Sp</label> @ViewBag.FullDate</td>

                            </tr>
                            <tr>
                                <th style="width:15%;text-align:left;border:none;font-weight:bold">Empty Wt.</th>
                                <td style="width:45%;text-align:left;border:none">:<label style="visibility:hidden">Sp</label>     @ViewBag.VehicleTareWT</td>
                                <th style="width:15%;text-align:left;border:none;font-weight:bold">Empty Date</th>
                                <td style="width:25%;text-align:left;border:none">:<label style="visibility:hidden;font-weight:400">Sp</label> @ViewBag.EmptyDate</td>

                            </tr>
                            <tr>
                                <th style="width:15%;text-align:left;border:none;font-weight:bold">Total Tare Wt.</th>
                                <td style="width:45%;text-align:left;border:none">:<label style="visibility:hidden">Sp</label> @ViewBag.Totalweightsum </td>
                                <th style="width:15%;text-align:left;border:none;font-weight:bold">Total Amount</th>
                                <td style="width:25%;text-align:left;border:none">:<label style="visibility:hidden;font-weight:400">Sp</label> @ViewBag.Grand_Total</td>

                            </tr>
                            <tr>
                                <th style="width:15%;text-align:left;border:none;font-weight:bold">Net Wt.</th>
                                <td style="width:45%;text-align:left;border:none">:<label style="visibility:hidden">Sp</label>     @ViewBag.NetWeight</td>
                                
                            </tr>
                            <tr>
                                <th style="width:15%;text-align:left;border:none;font-weight:bold">Remarks</th>
                                <td style="width:35%;text-align:left;border:none">:<label style="visibility:hidden">Sp</label>     @ViewBag.Remarks</td>


                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div>
                &nbsp;
            </div>
            <hr style="background-color: #ede5e5;" />

            <div style="text-align:left">
                <label style=" font-size: 10px;font-family: 'Segoe UI';font-weight:bold">Please check the weight. no responsibility accepted once carrier leaves the platform.</label><br />
                <label style=" font-size: 10px;font-family: 'Segoe UI';">(weight basis is on KGS)</label><br />

                <table class="tblBox">
                    <tbody>
                        <tr>
                            <th style="width:10%;text-align:left;border:none;font-weight:bold">Prepared by</th>
                            <td style="width:20%;text-align:left;border:none;">:<label style="visibility:hidden">Sp</label>     @ViewBag.UserName</td>


                        </tr>
                        <tr>
                            <th style="width:10%;text-align:left;border:none;font-weight:bold;">Closed By</th>
                            <td style="width:50%;text-align:left;border:none">:<label style="visibility:hidden;font-weight:400">Sp</label> @ViewBag.UserName1</td>
                            <th style="width:15%;text-align:left;border:none;font-weight:bold">Operator Sign</th>

                        </tr>

                    </tbody>
                </table>
            </div>
            <hr style="background-color: #ede5e5;" />
            <div style="text-align:left">
                <table class="tblBox">
                    <tbody>
                        <tr>
                            <th style="width:15%;text-align:left;border:none;font-weight:bold">Print Date & Time</th>
                            <td style="width:85%;text-align:left;border:none;">:<label style="visibility:hidden">Sp</label>     @ViewBag.PrintDate</td>


                        </tr>


                    </tbody>
                </table>

            </div>
        </div>
            <div>

            </div>
        </div>
</body>
</html>
