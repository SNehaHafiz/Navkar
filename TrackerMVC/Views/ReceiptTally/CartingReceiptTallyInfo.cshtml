                        //    "title": 'CategoryWiseInvoice',
                        //    "filename": 'CategoryWiseInvoice',
                        //    "text":'Export to Excel'

                        //}

                        //]

                    })




                },
                error: function (errormessage) {
                    alert("error");
                    alert(errormessage.responseText);
                }
            });


        }

    }



    









