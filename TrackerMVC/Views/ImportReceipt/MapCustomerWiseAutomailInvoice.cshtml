        var IsActive = document.getElementById("chkIsActive").checked;

 
         
        var res12 = isEmailtoid(mailtoemailid);

        if (res12 == false) {
            return false;
        }

        if (mailto == "CHA") {
            var mailtoID = $("#ddlcha option:selected").val();
