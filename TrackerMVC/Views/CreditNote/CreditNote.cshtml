<script>
    $("#ddlSearch").change(function () {
        var ddlSearchby = $("#ddlSearch").val();
        if (ddlSearchby == "1") {
            $("#divAssess").show();
            
            $("#divParty").hide();
            
        }
        if (ddlSearchby == "2") {
            $("#divAssess").show();
            
            $("#divParty").hide();
        }
        if (ddlSearchby == "3") {
            $("#Assess").hide();
           
            $("#divParty").show();
        }
 
    });
    function Summary() {
        $("#divSecSummary").show();
        $("#addHorse").hide();
        
    };


    function getBacks() {
        $("#addHorse").show();
        $("#divSecSummary").hide();
      
    }


    function Show() {
        // var date = document.getElementById("SelectedDate").value;

        var Search = $("#ddlSearch").val();
        var Assessno = $("#txtAssessno").val();
 
        var ddlGSTName = $("#ddlGSTName").val();
 
        var fromdate = $("#txtSummaryFrom").val();
        var todate = $("#txtSummaryTo").val();
        var data1 = { 'fromdate': fromdate, 'todate': todate, 'Search': Search, 'Assessno': Assessno, 'ddlGSTName': ddlGSTName };
        data = JSON.stringify(data1);

        // alert(data);
        $.ajax({

            url: '/CreditNote/GetCreditNoteSummary',
            type: 'Post',
            data: data,
            async: false,
            contentType: 'application/json; charset=utf-8',
            success: function (data) {
                // alert(data);
                
                $("#tblReceiptSummary").empty();
                RepTableDataJsonwopaging($("#tblReceiptSummary"), data, "CreditNoteSummary", "CreditNoteSummary");

            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }


        });


    }
    
    function OpenTariffDetails() {

        

        $("#tracker-loader").fadeOut("slow");
        //ddlSearchType
        ddlCategory
        var ddlCategory = $("#ddlCategory").val();
        var SearchType = $("#ddlSearchType").val();
        var Search = $("#TXtSearchOn").val();
        if (ddlCategory == "") {
            document.getElementById("ddlCategory").style.borderColor = "red";
            alert('Please  Enter  Category!');
            $("#largeModal1").modal('hide')
            event.preventDefault();
            return;

        }
    
        var data1 = { 'ddlCategory': ddlCategory, 'SearchType': SearchType, 'Search': Search };
        var data = JSON.stringify(data1);
        $.ajax({
            type: "POST",
            url: "/CreditNote/GetSearch",
            data: data,
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                $("#largeModal1").modal('show')
                $('#example3').dataTable({
                    "destroy": true,
                    "bLengthChange": false,
                    "bPaginate": false,
                    //"bFilter": false,
                    "paging": false,
                    "order": false,
                    "aaData": data,
                    "columns": [
                        {
                            "data": "data",
                            "render": function (data, type, row, meta) {
                                data = "<a href=\"#\" class=\"btn btn-sm btn-info\" title=\"Close\" onclick=\"CheckCredit('" + row.AssessNo + "','" + row.WorkYear + "','" + row.InvoiceNo+ "')\"><i class=\"fa fa-check\" style=\"font-size: 16px;\"></i></a>";
                               
                                return data;
                            }
                        },
                        { "data": "AssessNo" },
                        { "data": "WorkYear" },
                        { "data": "InvoiceNo" },
                        { "data": "GSTName" },
                        { "data": "GSTAddress" },
                   
                       

                    ]
                });
            },
            error: function (response) {
                alert(response.responseText);
                $("#tracker-loader").fadeOut("slow");
            }
        })
         
    }
    function GetDetailsForTariffSearch() {
        
        //ddlsearchtype

        var ddlCategory = $("#ddlCategory").val();
        var SearchType = $("#ddlSearchType").val();
        var SearchO = $("#TXtSearchOn").val();


        var data1 = { 'ddlCategory': ddlCategory, 'SearchType': SearchType, 'SearchO': SearchO };
        var data = JSON.stringify(data1);
        $.ajax({
            type: "POST",
            url: "/CreditNote/GetSearch",
            data: data,
            contentType: "application/json; charset=utf-8",
            success: function (data) {

                $('#example3').dataTable({
                    "destroy": true,
                    "bLengthChange": false,
                    "bPaginate": false,
                    //"bFilter": false,
                    "paging": false,
