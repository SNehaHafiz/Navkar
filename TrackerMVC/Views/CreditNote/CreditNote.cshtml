@{
    ViewBag.Title = "Credit Note";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
<style>
    .hiderow {
        display: none;
    }
</style>
<script src="~/js/GetTableJsonwopaging.js"></script>

<div id="addHorse">
    <div class="page-header">
        <h4 class="page-title">
            Credit Note
        </h4>
        <div class="form-group">
            <label class="form-label"></label>
            <div class="row gutters-xs">
                <div class="col">
                    <button type="button" class="btn btn-icon btn-teal" name="summarylist" title="Summary list" id="summarylist" onclick="Summary();"><i class="fa fa-file-text"></i></button>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="form-horizontal">
                        <div class="row">
                            <div class="col-lg-2 col-sm-12">
                                <div class="form-group">
                                    <label class="form-label mandatory">Credit Note No</label>
                                    <div class="row gutters-xs">
                                        <div class="col">
                                            <input ID="txtCreditNoteNo" type="text" placeholder="New" readonly="readonly" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-2 col-sm-12" style="display:none">
                                <div class="form-group">
                                    <label class="form-label mandatory">Assess No</label>
                                    <div class="row gutters-xs">
                                        <div class="col">
                                            <input ID="txtAssessno" type="text" placeholder="New" readonly="readonly" class="form-control" onblur="txtAssessno();" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-2 col-sm-12" style="display:none">
                                <div class="form-group">
                                    <label class="form-label mandatory">Invoice No</label>
                                    <div class="row gutters-xs">
                                        <div class="col">
                                            <input ID="txtInvoiceNo" type="text" placeholder="New" readonly="readonly" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-2 col-sm-12">
                                <div class="form-group">
                                    <label class="form-label mandatory">Credit Note Date</label>
