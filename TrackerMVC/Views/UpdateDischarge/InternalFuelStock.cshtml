<script>

    function SaveBillNodetails() {
        debugger;
        var BillNo = document.getElementById('TxtBillNo').value;
        var AmountForBill = document.getElementById('TxtBillAmt').value;
        var FUelID = document.getElementById('TxtFuelidS').value;
        var QtyModify = document.getElementById('TxtModifyQty').value;
        var RateModify = document.getElementById('Txtmodifyrate').value;


        if (BillNo == "") {
            document.getElementById("TxtBillNo").style.borderColor = "red";
            alert('Please enter Bill No!')
            event.preventDefault();
            return;
        }


        if (AmountForBill == "") {
            document.getElementById("TxtBillAmt").style.borderColor = "red";
            alert('Please enter Bill Amount!')
            event.preventDefault();
            return;
        }
        data1 = {
            'BillNo': BillNo, 'AmountForBill': AmountForBill, 'FUelID': FUelID, 'QtyModify': QtyModify, 'RateModify': RateModify

        };
        var data = JSON.stringify(data1);

        $.ajax({
            url: "/UpdateDischarge/UpdateBillNOForInternalstock",
            data: data,
            type: "POST",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (result) {


                $('#smallModal').modal('hide');
                Show();

            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }
        });
    }





    function ViewSummaryDrivers() {
        $("#diventrytable").hide();
        $("#divheader").hide();
        $("#DivSummary").show();
    }


    function getBack() {
        $("#diventrytable").show();
        $("#divheader").show();
        $("#DivSummary").hide();
    }

    function AddInternalFuelStoke() {

        var txtentryDate = document.getElementById('txtEntryDate').value;
        var txtFuelQty = document.getElementById('txtFuelQty').value;
        var txtRate = document.getElementById('txtRate').value;
        var ddlVendorName = document.getElementById('ddlVendorName').value;
        var trailerid = document.getElementById('txtVehicleNo').value;
        var ddlCostCenter = document.getElementById('ddlCostCenter').value;
        var CostCenterFor = document.getElementById('ddlCostCenterFor').value;
        var ddlFuelType = $("#ddlFuelType option:selected").text();
        var ddlFuelFor = $("#ddlFuelFor option:selected").val();
      
        if (txtentryDate == "") {
            document.getElementById("txtEntryDate").style.borderColor = "red";
            alert('Please enter Entry Date!')
            event.preventDefault();
            return;
        }


        if (txtFuelQty == "") {
            document.getElementById("txtFuelQty").style.borderColor = "red";
            alert('Please enter Fuel Qty!')
            event.preventDefault();
            return;
        }

        if (txtRate == "") {
           // alert(txtRate)
            txtRate = 0;
           // alert(txtRate)
        }

       

        if (trailerid == "") {
            //document.getElementById("trailerid").style.borderColor = "red";
            alert('Please Select Trailer No !')
            event.preventDefault();
            return;
        }

        if (ddlVendorName == "") {
            ddlVendorName = 0;
        }

        if (ddlFuelType == "--Select--") {
            //document.getElementById("ddlFuelType").style.borderColor = "red";
            alert('Please Select Fuel Type !')
            event.preventDefault();
            return;
        }
        if (CostCenterFor == "0") {
            document.getElementById("ddlCostCenterFor").style.borderColor = "red";
            alert('Please Select Cost Center For!')
            event.preventDefault();
            return;
        }
        if (ddlFuelFor == " ") {
            document.getElementById("ddlFuelFor").style.borderColor = "red";
            alert('Please Select Fuel For!')
            event.preventDefault();
            return;
        }
        data1 = {
            'txtentryDate': txtentryDate, 'txtFuelQty': txtFuelQty, 'txtRate': txtRate,
            'ddlVendorName': ddlVendorName, 'trailerid': trailerid, 'ddlFuelType': ddlFuelType, 'ddlCostCenter': ddlCostCenter, 'CostCenterFor': CostCenterFor, 'ddlFuelFor': ddlFuelFor
        };
        var data = JSON.stringify(data1);
     
    $.ajax({
        url: "/UpdateDischarge/Save",
        data: data,
    type: "POST",
    contentType: "application/json; charset=utf-8",
    dataType: "json",
    success: function (result) {
        if(JSON.stringify(result)==0)
        {
            alert('Fuel Entry already exist! ')
        }
        else
        {
            alert('Record saved successfully');
            var r = confirm( "Do you want to print?");
                if (r == true) {
                    $.ajax({
                        url: "/UpdateDischarge/PrintInternalFuelStock",
                        data: '{FuelFor : ' + JSON.stringify(ddlFuelFor) + ' }',
                        type: "POST",
