                        }
                    });
                } else {
                       window.location.href = '@Url.Action("InternalFuelStock", "UpdateDischarge")';
                }
            window.location.href = '@Url.Action("InternalFuelStock", "UpdateDischarge")';
        }
    
    
    },
    error: function (errormessage) {
    alert(errormessage.responseText);
    }
    });


        

    }
</script>

