</script >

        


<script type="text/javascript">


    function CheckCustomValidate() {
        var containerNo1 = document.getElementById('txtContainerno').value;
        var jono1 = document.getElementById('txtJoNo').value;

        data1 = { 'jono1': jono1, 'containerNo1': containerNo1 }
        data = JSON.stringify(data1);
       
        $.ajax({
            url: "/UpdateDischarge/CheckCustomValidate",
            data: data,
            type: "POST",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (data) {
               
                if (data == 1) {
                    alert("Record already exists!");

                     document.getElementById('txtContainerno').value ="";
                     document.getElementById('txtJoNo').value = "";
                     document.getElementById('txtLine').value = "";
                     document.getElementById('txtIndate').value = "";
                     document.getElementById('txtSize').value = "";
                     document.getElementById('txttype').value = "";
                     document.getElementById('txtExamine').value = "";


                }else {
                    AddContainersDetails();
                }
               
            },
            error: function (errormessage) {
                alert("error");
                alert(errormessage.responseText);
            }
        });
    }
    


    function ViewSummary() {

        $("#divDriver").hide();
        $("#viewSummary").show();
        $.ajax({
            type: 'POST',
            url: '/UpdateDischarge/AjaxGetCustomExamine',
            //data: '{FromDate: ' + JSON.stringify(FromDate) + ', ToDate: ' + JSON.stringify(ToDate) + ',SearchCriteria: ' + JSON.stringify(SearchCriteria) + ',SearchText: ' + JSON.stringify(SearchText) + '}',
            //data: JSON.stringify(formData),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            async: true,
            success: function (data) {
               // alert(JSON.stringify(data));
                $('#example2').dataTable({
                    "destroy": true,
                    "bLengthChange": false,
                    "bPaginate": false,
                    //"bFilter": false,
                    "paging": false,
                    "aaData": data,
                    "columns": [
                        { "data": "JONO" },
                        { "data": "ContainerNO" },
                        { "data": "Size" },
                        { "data": "ContainerType" },
                        { "data": "RMSPerc" }
                      
                      
                    ], "dom": 'Bfrtip',

                    "buttons": [{
                        "extend": 'excel',
                        "title": 'CustomExamine',
                        "filename": 'CustomExamine_List'

                    }
                    ]
                });
               

            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }
        });
    }



    function getBack() {
        document.location = '@Url.Action("ContainerSummary", "UpdateDischarge")';
    }
</script>

<script>
    function validate() {

        var txtContainerno = document.getElementById('txtContainerno').value;
      



        document.getElementById("txtContainerno").style.borderColor = "gainsboro";
     

        var blResult = Boolean;
        blResult = true;


        if (txtContainerno == "") {
          
            document.getElementById("txtContainerno").style.borderColor = "red";
            blResult = blResult && false;
        }


       
        if (blResult == false) { alert('Please fill the required fields!'); }
        return blResult;

    };
</script>

