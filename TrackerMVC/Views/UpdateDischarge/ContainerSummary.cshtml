<script type="text/javascript">
    function showContainerList() {

        var res = validate();
        if (res == false) {
            return false;
        }
        var ContainerNO = document.getElementById('txtContainerno').value;

        var data1 = { 'ContainerNO': ContainerNO.trim() };
        var data = JSON.stringify(data1);

       


        $.ajax({
            url: "/UpdateDischarge/AjaxGetContainerList",
            data: data,
            type: "POST",
            contentType: "application/json; charset=utf-8",
            //dataType: "json",
            success: function (data) {
              
              
                $("#txtJoNo").val(data[0].JONO);
                $("#txtLine").val(data[0].ShippingLine)
                $("#txtIndate").val(data[0].INDate)
                $("#txtSize").val(data[0].Size);
                $("#txttype").val(data[0].ContainerType);
              
              
            },
            error: function (errormessage) {
                alert("error");
                alert(errormessage.responseText);
            }
        });

    }



