
@{
    ViewBag.Title = "ImportAccountMaster";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/js/GetTableJson.js"></script>
<div class=" content-area overflow-hidden" id="divCreate">
    <div class="page-header">
        <h4 class="page-title">Import Account Master</h4>
        <li class="breadcrumb-item">
            <a onclick="OpenWOSummary();" class="btn btn-primary btn-success text-right" style="align-content:center;color:white"><i class="fa fa-file-text" data-placement="bottom" title="Open Work Order Summary"></i> </a>
        </li>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="form-horizontal">
                        <div class="row">
                            <div class="col-lg-3 col-sm-12">
                                <div class="form-group">
                                    <label class="form-label mandatory">Account-ID </label>
                                    <div class="row gutters-xs">
                                        <div class="col">
                                            <input ID="txtentryid" type="text" placeholder="New" readonly="readonly" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-6 col-sm-4">
                                <div class="form-group">
                                    <label class="form-label mandatory">Account Name</label>
                                    <div class="row gutters-xs">
                                        <div class="col">
                                            <input ID="txtacname" type="text" placeholder="Account Name" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 col-sm-4">
                                <div class="form-group">
                                    <label class="form-label mandatory">Tally Name</label>
                                    <div class="row gutters-xs">
                                        <div class="col">
                                            <input ID="txttallyname" type="text" placeholder="Tally Name" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="row">
                        <div class="col-lg-3 col-sm-12">
                            <div class="form-group">
                                <label class="form-label">Group Name</label>
                                <div class="row gutters-xs">
                                    <div class="col">
                                        @Html.DropDownList("ddlimportg", (IEnumerable<SelectListItem>)ViewBag.importg, "--Select--", new { @class = "form-control", @id = "importg", name = "importg", autocomplete = "off" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-xs-12" >
                            <div class="form-group">
                                <label class="form-label">IS DPDI </label>
                                <label class="custom-switch">
                                    <input type="checkbox" name="custom-switch-checkbox" id="chkisdpdi" value="true" checked class="custom-switch-input">
                                    <span class="custom-switch-indicator"></span>
                                    <span class="custom-switch-description"></span>
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3 col-sm-12">
                            <div class="form-group">
                                <label class="form-label">SAC/HSN Code</label>
                                <div class="row gutters-xs">
                                    <div class="col">
                                        @Html.DropDownList("ddlHSNDDL", (IEnumerable<SelectListItem>)ViewBag.HSNDDList, "--Select--", new { @class = "form-control", @id = "ddlHSNDDL", name = "ddlHSNDDL", autocomplete = "off" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-3 col-sm-12">
                            <div class="form-group">
                                <label class="form-label">Charges For</label>
                                <div class="row gutters-xs">
                                    <div class="col">
                                        <select class="form-control" id="ddlcharge">
                                            <option value="0">--Select--</option>
                                            <option value="All">All</option>
                                            <option value="Loaded">Loaded</option>
                                            <option value="Destuff">Destuff</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3 col-sm-12">
                            <div class="form-group">
                                <label class="form-label">Display Priority</label>
                                <div class="row gutters-xs">
                                    <div class="col">
                                        <select class="form-control" id="ddldp">

                                            <option value="0">0</option>
                                            <option value="1">1</option>
                                            <option value="2">2</option>
                                            <option value="3">3</option>
                                            <option value="4">4</option>
                                            <option value="5">5</option>
                                            <option value="6">6</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3 col-sm-12">
                            <div class="form-group">
                                <label class="form-label">Invoice Type</label>
                                <div class="row gutters-xs">
                                    <div class="col">
                                        @Html.DropDownList("ddlExpensesgroup", (IEnumerable<SelectListItem>)ViewBag.InvoiceDDL, "--Select--", new { @class = "form-control", @id = "dllinvtype", name = "ddlExpensesgroup", autocomplete = "off" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3 col-sm-12">
                            <div class="form-group">
                                <label class="form-label">Tax Code</label>
                                <div class="row gutters-xs">
                                    <div class="col">
                                        @Html.DropDownList("ddltax", (IEnumerable<SelectListItem>)ViewBag.TaxName, "--Select--", new { @class = "form-control", @id = "ddltax", name = "ddltax", autocomplete = "off" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3 col-xs-12">
                            <div class="form-group">
                                <label class="custom-switch">
                                    <input type="checkbox" name="custom-switch-checkbox" id="chkIsActive" value="true" checked class="custom-switch-input">
                                    <span class="custom-switch-indicator"></span>
                                    <span class="custom-switch-description">IsActive</span>
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <label class="form-label"></label>
                            <div class="row gutters-xs">
                                <div class="col">
                                    @*<input type="submit" id="Save" name="save" value="Save" class="btn btn-success" />*@
                                    <button id="btnSave" class="btn btn-success btn-xs" onclick="return Save();">Save</button>
                                    @*<input type="button" name="clear" value="Clear" class="btn btn-default" title="clear" id="clearValue" />*@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                </div>
            </div>
        </div>
    </div>

<div class=" content-area" id="divCreateSummary" style="display:none">
    <div class="page-header">
        <h4 class="page-title">Import Account Master List</h4>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a onclick="BackToWorkOrder();" class="btn btn-primary btn-success text-right" style="align-content:center;color:white"><i class="fa fa-arrow-left" data-placement="bottom" title="Add Work Order"></i> </a>
            </li>
        </ol>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="form-horizontal">

                        <div class="row">

                            <div class="col-lg-3 col-sm-12">
                                <div class="form-group">
                                    <label class="form-label mandatory">Search</label>
                                    <div class="row gutters-xs">
                                        <div class="col">
                                            @*@Html.EditorFor(model => model.CHACode, new { htmlAttributes = new { @class = "form-control", @id = "chaCode", autocomplete = "off", maxlength = 20 } })*@
                                            @Html.TextBox("txtsearch", null, new { @class = "form-control ", @id = "txtsearch", name = "txtsearch", autocomplete = "on" })
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-3 col-sm-12">
                                <div class="form-group">
                                    <label class="form-label" style="visibility:hidden"> '</label>
                                    <div class="row gutters-xs">
                                        <div class="col">
                                            <input type="button" id="btnShow" value="Show" class="btn btn-primary" onclick="ShowSSRSummary();" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 col-sm-12">
                                <div class="table-responsive">
                                    <table class="table table-bordered table-hover tbl-cart text-nowrap" id="tblWorkOrderOpenList" style="width:100%;"></table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>

        function BackToWorkOrder() {
            $("#divCreate").show();
            $("#divCreateSummary").hide();
        }
        function OpenWOSummary() {
            $("#divCreate").hide();
            $("#divCreateSummary").show();
        }

     function Save() {
        debugger;
         var ACname = document.getElementById('txtacname').value;
         var tallyname = document.getElementById('txttallyname').value;
         var importgroup = document.getElementById('importg').value;
         var isdpdi = document.getElementById('chkisdpdi').value;
         var hsncode = document.getElementById('ddlHSNDDL').value;
         var chargefor = document.getElementById('ddlcharge').value;
         var dp = document.getElementById('ddldp').value;
         var invtype = document.getElementById('dllinvtype').value;
         var tax = document.getElementById('ddltax').value
             

         var chkIsActive = document.getElementById('chkIsActive').value;
         

         if (ACname == "") {
             document.getElementById("txtacname").style.borderColor = "red";
            alert('Please  Enter  Account  Name!')
            event.preventDefault();
            return;
         }
         if (tallyname == "") {
             document.getElementById("txttallyname").style.borderColor = "red";
             alert('Please  Enter Tally Group!')
             event.preventDefault();
             return;
         }

         if (hsncode == 0) {
             document.getElementById("ddlHSNDDL").style.borderColor = "red";
             alert('Please  Enter  Account  Name!')
             event.preventDefault();
             return;
         }
         if (chargefor == 0) {
             document.getElementById("ddlcharge").style.borderColor = "red";
             alert('Please  Enter Tally Group!')
             event.preventDefault();
             return;
         }

         if (dp == 0) {
             document.getElementById("ddldp").style.borderColor = "red";
             alert('Please  Enter  Account  Name!')
             event.preventDefault();
             return;
         }
         if (invtype == 0) {
             document.getElementById("ddlinvtype").style.borderColor = "red";
             alert('Please  Enter Tally Group!')
             event.preventDefault();
             return;
         }
         if (tax == 0) {
             document.getElementById("ddltax").style.borderColor = "red";
             alert('Please  Enter Tally Group!')
             event.preventDefault();
             return;
         }



        var ExpHeadMasterEnt = {};
        ExpHeadMasterEnt.AcName = ACname;
         ExpHeadMasterEnt.TallyName = tallyname;
         ExpHeadMasterEnt.IMPGID = importgroup;
         ExpHeadMasterEnt.isdpd = isdpdi;
         ExpHeadMasterEnt.HSNCodeL = hsncode;
         ExpHeadMasterEnt.chargefors = chargefor;
         ExpHeadMasterEnt.disp = dp;
         ExpHeadMasterEnt.InvTId = invtype;
         ExpHeadMasterEnt.TaxID = tax;
         ExpHeadMasterEnt.IsActive = chkIsActive;
         


        @*expTariffMaster Is Entities Name *@
        //This Is For Pass Data Through Java Script
$.ajax({
    url: "/ExpensesHead/SaveIAM",
    data: '{ExpHeadMasterEnt: ' + JSON.stringify(ExpHeadMasterEnt) + '}',
type: "POST",
contentType: "application/json; charset=utf-8",
dataType: "json",
success: function (result) {
    swal("Good job!", "You clicked the button!", "success");
window.location.href = '@Url.Action("ImportAccountMaster", "ExpensesHead")';
},
error: function (errormessage) {
alert(errormessage.responseText);
}
});
        }

        function ShowSSRSummary() {


            debugger;
            var search = document.getElementById('txtsearch').value;
            var data1 = { 'search': search };
            data = JSON.stringify(data1);
            $.ajax({
                url: "/ExpensesHead/GetImportAcList",
                data: data,
                type: "POST",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (data) {
                    //alert(jsonResult)
                    $("#reportTable").empty();
                    RepTableDataJson($("#tblWorkOrderOpenList"), data, "GetImportAcList", "GetImportAcList")
                    //  alert(jsonResult)
                },
                error: function (errormessage) {
                    alert("error");
                    alert(errormessage.responseText);
                }
            });


        }
</script>

