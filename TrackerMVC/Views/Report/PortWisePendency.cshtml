@model IEnumerable<TrackerMVCEntities.BusinessEntities.CustomerWiseLDDReport>
@{
    /**/

    ViewBag.Title = "PortWisePendency";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}



<link href="~/css/Transporter.css" rel="stylesheet" />
<div id="divSummary">
    <div class="page-header">
        <h4 class="page-title">Port Wise Pendency</h4>
    </div>

    <div class="row">
        <div class="col-lg-1 col-sm-12" id="divTEUS" style="display:none">
            <div class="form-group">
                <label class="form-label" style="visibility:hidden"> '</label>
                <div class="row gutters-xs">
                    <div class="col">
                        <span style="font-weight: bold"> 20 :</span> <label id="lbltwenty" style="font-weight: bold"></label>

                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-1 col-sm-12" id="divTEUS1" style="display:none">
            <div class="form-group">
                <label class="form-label" style="visibility:hidden"> '</label>
                <div class="row gutters-xs">
                    <div class="col">
                        <span style="font-weight: bold"> 40 :</span> <label id="lblforty" style="font-weight: bold"></label>

                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-1 col-sm-12" id="divTEUS2" style="display:none">
            <div class="form-group">
                <label class="form-label" style="visibility:hidden"> '</label>
                <div class="row gutters-xs">
                    <div class="col">
                        <span style="font-weight: bold"> 45 :</span> <label id="lblfortyfive" style="font-weight: bold"></label>

                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-1 col-sm-12" id="divTEUS3" style="display:none">
            <div class="form-group">
                <label class="form-label" style="visibility:hidden"> '</label>
                <div class="row gutters-xs">
                    <div class="col">
                        <span style="font-weight: bold"> TEUS :</span>   <label id="lblTotal" style="font-weight: bold"></label>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row row-cards">
        <div class="col-lg-6 col-sm-12">

            <div class="card text-center" style="border: 1px solid #9f78ff;" id="importArrivalMainCard">


                <div class="table-responsive">
                    <table class="table card-table table-vcenter text-nowrap" id="ShowPortPendency">
                        <thead class="text-white" style="background-color:#7bc144">
                            <tr>
                                <th style="color:white;text-align:left;font-weight:bold;">Port</th>
                                <th style="color:white;text-align:left;font-weight:bold;">20</th>
                                <th style="color:white;text-align:left;font-weight:bold;">40</th>
                                <th style="color:white;text-align:left;font-weight:bold;">45</th>
                                <th style="color:white;text-align:left;font-weight:bold;">Total</th>
                                <th style="color:white;text-align:left;font-weight:bold;">Teus</th>





                            </tr>

                        </thead>
                        <tbody>
                            @foreach (var d in Model)
                            {

                                <tr>
                                    <td class="bg-primary text-white" style="text-align:left;padding: 10px 10px 0px 10px; cursor: pointer;">@d.Port </td>

                                    <td style="text-align:right;">@d.T20</td>
                                    <td style="text-align:right;">@d.T40 </td>
                                    <td style="text-align:right;">@d.T45 </td>
                                    <td style="text-align:right;">@d.Total </td>
                                    <td style="text-align:right;">@d.Teus </td>


                                </tr>
                            }

                        </tbody>
                    </table>
                </div>



            </div>


        </div>



        <!--Codes By Trailers Location-->
        <!--bar graph-->
    </div>
</div>



<script type="text/javascript">
    $(document).ready(function () {
        var table = document.getElementById("ShowPortPendency");
        var row;


        var COunt = 0;
        var Count40 = 0;
        var Count45 = 0;
        var Countteus = 0;

        for (var i = 1; i < table.rows.length; i++) {
            row = table.rows[i];
            //var Size = row.cells[6].childNodes[1].value;
            var Size = row.cells[1].innerText;
            var Size40 = row.cells[2].innerText;
            var Size45 = row.cells[3].innerText;
            // var Sizeteus = row.cells[8].innerText;
            var size1 = Size;
            //var size400 = Size40;
            COunt = COunt + Number(size1);
            Count40 = Count40 + Number(Size40);
            Count45 = Count45 + Number(Size45);
            //Countteus = Count40 + Number(Sizeteus);
            //TotTEUS = Number(TotTEUS) + Number(size);


        }
        TotTEUS = COunt + (Count40 * 2) + (Count45 * 2)

        $("#lbltwenty").text(COunt);
        $("#lblforty").text(Count40);
        $("#lblfortyfive").text(Count45);
        $("#lblTotal").text(TotTEUS);

        $("#divTEUS").show();
        $("#divTEUS1").show();
        $("#divTEUS2").show();
        $("#divTEUS3").show();
    });
</script>