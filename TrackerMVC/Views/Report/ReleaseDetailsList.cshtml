                                    <tr>
                                        <th>Hold ID</th>
                                        <th>Released Remarks</th>
                                        <th>Released By</th>
                                        <th>Released On</th>
                                    </tr>
                                </thead>
                                @*<tbody style="box-sizing :border-box;">
                                    @foreach (var d in Model)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(m => d.HoldID)</td>
                                            <td>@Html.DisplayFor(m => d.ReleasedRemarks)</td>
                                            <td>@Html.DisplayFor(m => d.ReleaseBy)</td>
                                            <td>@Html.DisplayFor(m => d.ReleasedOn)</td>


                                        </tr>


                                    }

                                </tbody>*@
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>

    <link href="~/css/DateTimePickerBL.css" rel="stylesheet" />

    <script src="~/js/DateTimePickerForBL.js"></script>

    <script type="text/javascript">
        $(function () {
            var currDate = new Date();
            $('.datePicker')
                .datepicker({
                    autoclose: true,
                    todayHighlight: true,
                    format: 'dd M yyyy',
                    language: "tr",
                    changeMonth: true,
                    changeYear: true,
                })
                .on('changeDate', function (e) {
                    // Revalidate the date field
                    // $('#eventForm').formValidation('revalidateField', 'date');
                    $('.datepicker').hide();
                });
        });
            </script>

            <script type="text/javascript">
                $(document).ready(function () {
                    //$('#tblReleasedlist').DataTable({
                    //    "bLengthChange": false,
                    //    "bInfo": false,
                    //    "bPaginate": false,
                    //    //"bFilter": false,
                    //    "paging": false,
