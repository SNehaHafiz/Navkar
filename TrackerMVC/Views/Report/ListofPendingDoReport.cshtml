
@{
    ViewBag.Title = "ListofPendingDoReport";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<script src="~/js/GetTableJson.js"></script>
<div id="tracker-loader"></div>
<div class=" content-area overflow-hidden" id="divDOList">
    <div class="page-header">
        <h4 class="page-title">List of Pending Do Report</h4>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @*<a onclick="OpenDOSummary();" class="btn btn-primary btn-success text-right" style="align-content:center;color:white"><i class="fa fa-file-text" data-placement="bottom" title="Open Do Summary"></i> </a>*@
            </li>
        </ol>
    </div>
    <div class="row">
        <div class="col-md-12 col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-12 col-sm-12">
                            <div class="form-group">
                                <div class="row gutters-xs">
                                    <div class="col-md-2 col-lg-2">
                                        <div class="form-group label-floating">
                                            <label class="form-label">From</label>
                                            @Html.TextBox("FromDate", null, new { @id = "FromDate", @class = "form-control form_datetime1", @Value = DateTime.Now.ToString("dd MMM yyyy 08:00") })
                                        </div>
                                    </div>
                                    <div class="col-md-2 col-lg-2">
                                        <div class="form-group label-floating">
                                            <label class="form-label">To</label>
                                            @Html.TextBox("ToDate", null, new { @id = "ToDate", @class = "form-control form_datetime1", @Value = DateTime.Now.ToString("dd MMM yyyy HH:mm") })
                                        </div>
                                    </div>


                                    <div class="col-md-22 col-lg-2">
                                        <div class="form-group label-floating" style="margin-top: 33px;">
                                            <button class=" btn btn-primary" style="margin-top: -7px" id="btnSearch" onclick="Show('SHOW')" type="button">
                                                SHOW
                                            </button>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-2 col-sm-12">
                            <div class="form-group">
                                <label class="form-label" style="visibility:hidden"> '</label>
                                <div class="row gutters-xs">
                                    <div class="col">
                                        <span style="font-weight: bold"> Total Do :</span> <label id="lblTotalDo" style="font-weight: bold"></label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-2 col-sm-12">
                            <div class="form-group">
                                <label class="form-label" style="visibility:hidden"> '</label>
                                <div class="row gutters-xs">
                                    <div class="col">
                                        <span style="font-weight: bold"> Total DO Received :</span> <label id="lblTotalDoReceived" style="font-weight: bold"></label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-2 col-sm-12">
                            <div class="form-group">
                                <label class="form-label" style="visibility:hidden"> '</label>
                                <div class="row gutters-xs">
                                    <div class="col">
                                        <span style="font-weight: bold"> Vehicle Sent :</span> <label id="lblVehicleSent" style="font-weight: bold"></label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-2 col-sm-12">
                            <div class="form-group">
                                <label class="form-label" style="visibility:hidden"> '</label>
                                <div class="row gutters-xs">
                                    <div class="col">
                                        <span style="font-weight: bold"> Total Gate In :</span> <label id="lblTotalGateIn" style="font-weight: bold"></label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-2 col-sm-12">
                            <div class="form-group">
                                <label class="form-label" style="visibility:hidden"> '</label>
                                <div class="row gutters-xs">
                                    <div class="col">
                                        <span style="font-weight: bold"> Balance Do :</span> <label id="lblBalanceDo" style="font-weight: bold"></label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                     @Html.ActionLink("Export To Excel", "ExportToExcelListofPendingDo", null, new { @class = "btn btn-primary btn-md" })
                    <div class="row">
                        <div class="col-md-12 col-lg-12">
                            <div class="table-responsive">
                                <table class="table table-bordered table-hover tbl-cart text-nowrap" id="reportTable" style="width:100%">
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class=" content-area" id="divDoSummary" style="display:none">
    <div class="page-header">
        <h4 class="page-title">List of pending Do Report </h4>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a onclick="BackToDOList();" class="btn btn-primary btn-success text-right" style="align-content:center;color:white"><i class="fa fa-arrow-left" data-placement="bottom" title="DO List"></i> </a>
            </li>
        </ol>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="form-horizontal">
                        <div class="row">
                            <div class="col-lg-12 col-sm-12">
                                <div class="table-responsive">
                                    <table class="table table-bordered table-hover tbl-cart text-nowrap" id="tblDoLRSummary" style="width:100%;">
                                       
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

    function OpenDOSummary() {
        $("#divDOList").hide();
        $("#divDoSummary").show();
    }

    function BackToDOList() {
        $("#divDOList").show();
        $("#divDoSummary").hide();
    }

    $(document).ready(function () {
    });
    $(window).on("load", function (e) {
        $("#tracker-loader").fadeOut("slow");
    })
</script>
<script>

    function ViewDO(BookingNo) {
        //alert(BookingNo);
        $("#tracker-loader").fadeIn("slow");

        var data1 = { 'BookingNo': BookingNo};
        var data = JSON.stringify(data1);

        $.ajax({
            url: "/Report/ListDOSummary",
            data: data,
            type: "POST",
            contentType: "application/json; charset=utf-8",
            // dataType: "json",
            success: function (data) {
                if (data == "" || data == "[]") {
                    alert("No data found.");
                } else {
                    RepTableDataJson($('#tblDoLRSummary'), data.LorryList, "ExportRep", "ExportRep");
                    $("#divDOList").hide();
                    $("#divDoSummary").show();
                    $("#tracker-loader").fadeOut("slow");
                }
            },

            error: function (errormessage) {
                $("#tracker-loader").fadeOut("slow");
                alert(errormessage.responseText);
            }
        });

        $("#tracker-loader").fadeOut("slow");

    }

    function Show() {
        $("#tracker-loader").fadeIn("fast");
        var fromdate = $("#FromDate").val();
        var todate = $("#ToDate").val();
        var data1 = { 'fromdate': fromdate, 'todate': todate };
        var data = JSON.stringify(data1);
       // alert(data);
        try {
            $.ajax({
                url: '/Report/getListofPenginDo',
                type: 'Post',
                data: data,
                async: true,
                contentType: 'application/json; charset=utf-8',
                success: function (data) {
                    debugger;
                    if (data == "" || data == "[]") {
                        alert("No data found.");
                    } else {
                        RepTableDataJson($('#reportTable'), data.Issuedata, "ExportRep", "ExportRep");
                        $("#lblTotalDo").text(data.TotalDo);
                        $("#lblTotalDoReceived").text(data.TotalDOReceived);
                        $("#lblVehicleSent").text(data.VehicleSent);
                        $("#lblTotalGateIn").text(data.TotalGateIn);
                        $("#lblBalanceDo").text(data.BalanceDo);
                    }

                    $("#tracker-loader").fadeOut("slow");
                },
                error: function (errormessage) {
                    alert(errormessage.responseText);
                    $("#tracker-loader").fadeOut("slow");
                }


            });
        }
        catch (ex) {
            $("#tracker-loader").fadeOut("slow");
            alert(ex.message);
        }
    }
</script>