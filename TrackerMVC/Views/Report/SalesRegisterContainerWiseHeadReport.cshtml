                    { "data": "Linename" },
                    { "data": "agname" },
                    { "data": "GSTName" },
                    { "data": "blnumber" },
                    { "data": "boeno" },
                   { "data": "Haluage" },
                    { "data": "AssessType" },
                    { "data": "AssessDate" },
                { "data": "InvoiceNo" },
                 { "data": "IGMNo" },
               { "data": "ItemNo" },
                { "data": "ContainerNo" },
                       { "data": "size" },
                    { "data": "ContainerType" },
                    { "data": "CargoType" },
                    { "data": "CargoDesc" },
                    { "data": "CargoWt" },
                    { "data": "TareWt" },
                    { "data": "GrossWt" },
                    { "data": "Commodity" },
                   { "data": "INDate" },
                    { "data": "outdate" },
                    { "data": "ValidUptoDate" },
                { "data": "DWELLDAYS" },
