                       { "data": "MovementRMS" },
                    { "data": "TariffDescription" },
                    { "data": "JOType" },
                    { "data": "ScanType" },
                    { "data": "LIFTONOFF" },
                    { "data": "EMPTYOFF" },
                    { "data": "LOADINGANDUNLOADING" },
                    { "data": "FactorygateinDate" },
                   { "data": "FactorygateoutDate" },
                    { "data": "SURVEY" },
                    { "data": "deliverytype" },
                { "data": "GST" },
                 { "data": "NetAmount" },
               { "data": "GSTAmt" },
              { "data": "Remarks" },
                       { "data": "PreparedBy" },
                    { "data": "CheckedBy" },
                    ],

                    "dom": 'Bfrtip',
                    "buttons": [{
                        "extend": 'excel',
                        "title": 'Sales Register Container and HeadWise Report',
                        "filename": 'SalesRegisterContainerandHeadWiseReport_list'

                    }]

                });

                var table = document.getElementById("reportTable");
                var row;


                var TotTEUS1 = 0;
                var TotTEUS2 = 0;
                var TotTEUS3 = 0;
                var TotTEUS = 0;

                for (var i = 1; i < table.rows.length; i++) {
                    row = table.rows[i];
                    //var Size = row.cells[6].childNodes[1].value;
                    var Size = row.cells[16].innerText;

                    //alert(Size)

                    if (Size == 20) {
                        TotTEUS1 = Number(TotTEUS1) + 1;
                    }
                    if (Size == 40) {
                        TotTEUS2 = Number(TotTEUS2) + 1;
                    }
                    if (Size == 45) {
                        TotTEUS3 = Number(TotTEUS3) + 1;
                    }
                    //TotTEUS = Number(TotTEUS) + Number(size);


                }
                TotTEUS = TotTEUS1 + (TotTEUS2 * 2) + (TotTEUS3 * 2)
                // alert(TotTEUS);
                $("#lbltwenty").text(TotTEUS1);
                $("#lblforty").text(TotTEUS2);
                $("#lblfortyfive").text(TotTEUS3);
                $("#lblTotal").text(TotTEUS);

                $("#divTEUS").show();
                $("#divTEUS1").show();
                $("#divTEUS2").show();
                $("#divTEUS3").show();



            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }


        });


    }
</script>

