                                                <td>@Html.DisplayFor(m => d.RegDateString)</td>                                              
                                            </tr>

                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

