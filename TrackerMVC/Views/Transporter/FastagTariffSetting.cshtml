                                </thead>

                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>





<script>

    function SavetariffDetails() {

        var res = validateFunction();
        if (res == false) {
            return false;
        }
       var fromlocation =  $("#ddlFromlocation option:selected").val();
        var Tolocation = $("#ddlTOlocation option:selected").val();
        var Toll = $("#ddltoll option:selected").val();
        var amount = $("#TxtAmount").val();
        var Passing = $("#ddlpassing").val();
        var data1 = { 'fromlocation': fromlocation, 'Tolocation': Tolocation, 'Toll': Toll, 'amount': amount, 'Passing': Passing};
        var data = JSON.stringify(data1);
       

        $.ajax({
            url: "/Transporter/CheckTariffexist",
            data: data,
            type: "POST",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (data) {
               if (data == 1) {
                    alert("Record already exists in system!")
                    $("#tracker-loader").fadeOut("slow");

                } else {
                    Save();
                }
            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }
        });
    }
    function Save() {
       var fromlocation =  $("#ddlFromlocation option:selected").val();
        var Tolocation = $("#ddlTOlocation option:selected").val();
        var Toll = $("#ddltoll option:selected").val();
        var amount = $("#TxtAmount").val();
        var Passing = $("#ddlpassing").val();
        var data1 = { 'fromlocation': fromlocation, 'Tolocation': Tolocation, 'Toll': Toll, 'amount': amount, 'Passing': Passing};
        var data = JSON.stringify(data1);
      

        $.ajax({
            url: "/Transporter/SaveFastagSetting",
            data: data,
            type: "POST",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (data) {
                alert("record saved successfully!");
                document.location = '@Url.Action("FastagTariffSetting", "Transporter")'
            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }
        });
    }
   

    function getBack1() {
        $("#divAddfastag").show();
        $("#divEdit").hide();
        $("#divView").hide();
    }
</script>


<script>
    function ViewSummary() {
        $("#divAddfastag").hide();
        $("#divEdit").show();
        $("#divView").hide();
        //$("#divEditfastag").hide();
        $("#tracker-loader").fadeIn("slow");

        $.ajax({

            url: '/Transporter/GetFasttagtariffdetails',
            type: 'Post',
            async: false,
            contentType: 'application/json; charset=utf-8',
            success: function (data) {

                $('#example').dataTable({
                    "destroy": true,
                    "bLengthChange": false,
                    "aaData": data,
                    "bInfo": false,
                    "bPaginate": false,
                    "bFilter": true,
                    "paging": false,
                    "columns": [
                        {
                            "data": "entryid",
                            "render": function (data, type, row, meta) {
                                if (type === 'display') {

                                    data = '<a   href="#" class="btn btn-sm btn-danger" title="Cancel" onclick="CancelDetails(' + row.entryid + ')"><i class="fa fa-trash"></i></a>';
                                }

                                return data;
                            }


                        },
                        { "data": "entryid" },
                        { "data": "Entrydate" },
                        { "data": "Fromid" },
                        { "data": "Toid" },
                        { "data": "passing" },
                        { "data": "toll" },
                        { "data": "Amount" },
                        { "data": "UserName" },
                    ],
                    "dom": 'Bfrtip',

                    "buttons": [{
                        "extend": 'excel',
                        "title": 'Fastag Summary',
                        "filename": 'FastagSummary_List'

                    }
                    ]
                });
                $("#tracker-loader").fadeOut("slow");
            },
            error: function (errormessage) {
                alert(errormessage.responseText);
                $("#tracker-loader").fadeOut("slow");
            }


        });
    }


    function CancelDetails(entryid) {
        alert(entryid);
        var data1 = { 'entryid': entryid };
        var data = JSON.stringify(data1);

         $.ajax({
            url: "/Transporter/CancelDetails",
            data: data,
            type: "POST",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (data) {
                alert("record saved successfully!");
                document.location = '@Url.Action("FastagTariffSetting", "Transporter")'
            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }
        });
    }
</script>


<script>
    function validateFunction() {

        var Txtfromlocation = document.getElementById('ddlFromlocation').value;
        var txtTolocation = document.getElementById('ddlTOlocation').value;
        var TxtToll = document.getElementById('ddltoll').value;
        var TxtAmount = document.getElementById('TxtAmount').value;





        document.getElementById("ddlFromlocation").style.borderColor = "gainsboro";
        document.getElementById("ddlTOlocation").style.borderColor = "gainsboro";
        document.getElementById("ddltoll").style.borderColor = "gainsboro";
        document.getElementById("TxtAmount").style.borderColor = "gainsboro";


        var blResult = Boolean;
        blResult = true;


        if (Txtfromlocation == "") {
            //  document.getElementById('ContainerNo').style.borderColor = "red"
            document.getElementById("ddlFromlocation").style.borderColor = "red";
            blResult = blResult && false;
        }
        if (txtTolocation == "") {
            //  document.getElementById('ContainerNo').style.borderColor = "red"
            document.getElementById("ddlTOlocation").style.borderColor = "red";
            blResult = blResult && false;
        }
        if (TxtToll == "") {
            //  document.getElementById('ContainerNo').style.borderColor = "red"
            document.getElementById("ddltoll").style.borderColor = "red";
            blResult = blResult && false;
        }
        if (TxtAmount == "") {
            //  document.getElementById('ContainerNo').style.borderColor = "red"
            document.getElementById("TxtAmount").style.borderColor = "red";
            blResult = blResult && false;
        }



        if (blResult == false) { alert('Please fill the required fields!'); }
        return blResult;

    };
</script>


<script>
    function ViewSummaryDetails() {
        $("#divAddfastag").hide();
        $("#divEdit").hide();
        $("#divView").show();
       
        $.ajax({
            type: 'POST',
            url: '/Transporter/GetfastagsummaryDetails1',
            contentType: "application/json; charset=utf-8",
