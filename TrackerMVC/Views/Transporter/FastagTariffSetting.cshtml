                alert(errormessage.responseText);
               
            }
        });
    }
</script>



<script>
    $('#ddlpassing').change(function (e) {
        var TollID = $("#ddltoll option:selected").val();
        var Passing = $("#ddlpassing option:selected").val();
        var data1 = { 'TollID': TollID, 'Passing': Passing };
        var data = JSON.stringify(data1);
        $.ajax({
            url: "/Transporter/AjaxGetTollAmount",
            data: data,
            type: "POST",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (data) {
                $("#TxtAmount").val(data);
            },

            error: function (errormessage) {
                alert(errormessage.responseText);
            }
        });




    });
</script>