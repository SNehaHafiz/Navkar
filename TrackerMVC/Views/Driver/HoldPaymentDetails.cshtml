
@{
    ViewBag.Title = "HoldPaymentDetails";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}



<div class="content-area overflow-hidden" id="divDriver">
    <div>
        <div class="page-header">
            <h4 class="page-title">Driver Payment Hold</h4>
            <div class="form-group">
                <label class="form-label"></label>
                <div class="row gutters-xs">
                    <div class="col">

                        <button type="button" class="btn btn-icon btn-teal" name="summarylist" title="Summary list" id="summarylist" onclick="ViewSummaryDrivers();"><i class="fa fa-file-text"></i></button>


                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-body p-6">
                        <div class="row">
                            <div class="col-lg-3 col-sm-12">
                                <div class="form-group">
                                    <label class="form-label mandatory">Driver Code</label>
                                    <div class="row gutters-xs">
                                        <div class="col">
                                            @Html.TextBox("txtDriverid", null, new { @class = "form-control", @id = "txtDriverid", @name = "txtDriverid", autocomplete = "off" })


                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 col-sm-12">
                                <div class="form-group">
                                    <label class="form-label mandatory" style="visibility:hidden">.</label>
                                    <div class="row gutters-xs">
                                        <div class="col">
                                            <button class="btn btn-primary" style="width:60PX" id="btnSearch" type="button" onclick="showdriverdetails()"><i class="fe fe-search"></i></button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-3 col-sm-12">
                                <div class="form-group">
                                    <label class="form-label mandatory">Driver Name</label>
                                    <div class="row gutters-xs">
                                        <div class="col">
                                            @Html.TextBox("txtDriverName", null, new { @class = "form-control", @id = "txtDriverName", @name = "txtDriverName", autocomplete = "on", @readonly = "readonly" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                      
                        <div class="row">
                            <div class="col-lg-3 col-sm-12">
                                <div class="form-group">
                                    <label class="form-label mandatory">Account Name</label>
                                    <div class="row gutters-xs">
                                        <div class="col">
                                            @Html.TextBox("txtAccountname", null, new { @class = "form-control", @id = "txtAccountname", @name = "txtAccountname", autocomplete = "off", @readonly = "readonly" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-3 col-sm-12">
                                <div class="form-group">
                                    <label class="form-label mandatory">IFSC Code</label>
                                    <div class="row gutters-xs">
                                        <div class="col">
                                            @Html.TextBox("txtIFSCCode", null, new { @class = "form-control", @id = "txtIFSCCode", @name = "txtIFSCCode", autocomplete = "off", @readonly = "readonly" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-3 col-sm-12">
                                <div class="form-group">
                                    <label class="form-label mandatory">Bank Name</label>
                                    <div class="row gutters-xs">
                                        <div class="col">
                                            @Html.TextBox("txtBankName", null, new { @class = "form-control", @id = "txtBankName", @name = "txtBankName", autocomplete = "off", @readonly = "readonly" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-3 col-sm-12">
                                <div class="form-group">
                                    <label class="form-label mandatory">Branch</label>
                                    <div class="row gutters-xs">
                                        <div class="col">
                                            @Html.TextBox("txtbranch", null, new { @class = "form-control", @id = "txtbranch", @name = "txtbranch", autocomplete = "off", @readonly = "readonly" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-3 col-sm-12">
                                <div class="form-group">
                                    <label class="form-label mandatory">Payment Mode</label>
                                    <div class="row gutters-xs">
                                        <div class="col">
                                            @Html.TextBox("txtPaymentMode", null, new { @class = "form-control", @id = "txtPaymentMode", @name = "txtPaymentMode", autocomplete = "off", @readonly = "readonly" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                        </div>
                        <div class="row">
                            <div class="col-lg-6 col-sm-12">
                                <div class="form-group">
                                    <label class="form-label mandatory">Remakrs</label>
                                    <div class="row gutters-xs">
                                        <div class="col">
                                            @Html.TextArea("TxtRemakrs", null, new { @class = "form-control", @id = "TxtRemakrs", @name = "TxtRemakrs", autocomplete = "off" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                       
                        <div class="row">
                            <div class="col-md-1 col-xs-4">
                                <div class="form-group">
                                    <div class="row gutters-xs">
                                        <div class="col">
                                            <button class="btn btn-success btn-xs" id="btndriverholdpayment" onclick="AddHoldpayment();">Hold</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>


<div class=" content-area" id="divSummary" style="display:none">
    <div class="page-header">
        <h4 class="page-title">Driver Hold Summary </h4>
        <div class="ibox-content  text-right">
            <a onclick="getBack();" class="btn btn-primary btn-success" style="color:white;align-content:center;"><i class="fa fa-arrow-left" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Back"></i>  </a></li>
        </div>

    </div>
  

    <div class="row">
        <div class="col-md-12 col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover tbl-cart text-nowrap" id="example">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>Driver Code</th>
                                        <th>Driver Name</th>
                                        <th>Hold Date</th>
                                        <th>Remakrs</th>


                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>

                </div>


            </div>
        </div>
    </div>
</div>


<script type="text/javascript">
    function showdriverdetails() {
      
        //var res = validate();
        //if (res == false) {
        //    return false;
        //}
        var driverid = document.getElementById('txtDriverid').value;

        //var data1 = { 'driverid': driverid.trim() };
        //var data = JSON.stringify(data1);

        //alert(data);

        $.ajax({
            url: "/Driver/getDriverBankDetails",
            data: '{driverid: ' + JSON.stringify(driverid) + '}',
            type: "POST",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (data) {
          
             
              
               $("#txtDriverName").val(data[0].DriverName)
               $("#txtAccountname").val(data[0].AccountNo)
               $("#txtIFSCCode").val(data[0].IFSCCode)
               $("#txtBankName").val(data[0].BankName)
               $("#txtbranch").val(data[0].BranchName)
               $("#txtPaymentMode").val(data[0].PaymentMode)
                

            },
            error: function (errormessage) {
                alert("error");
                alert(errormessage.responseText);
            }
        });

    }



    function AddHoldpayment() {

        var res = validateSaveFunction();
        if (res == false) {
            return false;
        }
        var holdDriverid = document.getElementById('txtDriverid').value;
        var Remakrs = document.getElementById('TxtRemakrs').value;

        var data1 = { 'holdDriverid': holdDriverid, 'Remakrs': Remakrs };
        var data = JSON.stringify(data1);
        $.ajax({
            url: "/Driver/AjaxGetholdDriverid",
            data: data,
            type: "POST",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (data) {
                alert(data)
            },
            error: function (errormessage) {
                alert("error");
                alert(errormessage.responseText);
            }
        });
        document.location = '@Url.Action("HoldPaymentDetails", "Driver")';

    }
</script>
<script>
    function validateSaveFunction() {

        var txtdrivername = document.getElementById('txtDriverid').value;

      
       

        var blResult = Boolean;
        blResult = true;
        document.getElementById("txtDriverid").style.borderColor = "gainsboro";

        if (txtdrivername == "") {
            //  document.getElementById('ContainerNo').style.borderColor = "red"
            document.getElementById("txtDriverid").style.borderColor = "red";
            blResult = blResult && false;
        }


       
        if (blResult == false) { alert('Please fill the required fields!'); }
        return blResult;

    };
</script>


<script>
    function ViewSummaryDrivers() {
        $("#divDriver").hide();
        $("#divSummary").show();
        $.ajax({
            type: 'POST',
            url: '/Driver/GetDriverHoldEntries',
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            async: true,
            success: function (data) {
                $('#example').dataTable({
                    "destroy": true,
                    "bLengthChange": false,
                    "bPaginate": false,
                    //"bFilter": false,
                    "paging": false,
                    "aaData": data,
                    "columns": [
                        {
                            "data": "DriverID",
                            "render": function (data, type, row, meta) {
                                if (type === 'display') {

                                    data = '<a   href="#" class="btn btn-sm btn-primary" title="View" onclick="release(' + row.DriverID + ',' + row.HoldID+')">Release</a>';
                                }

                                return data;
                            }


                        },
                        { "data": "DriverID" },
                        { "data": "DriverName" },
                        { "data": "HoldDate" },
                        { "data": "TxtRemakrs" },
                    ],
                    "dom": 'Bfrtip',

                    "buttons": [{
                        "extend": 'excel',
                        "title": 'DriverDetails',
                        "filename": 'DriverDetails_List'

                    }
                    ]

                })
            },
            error: function (errormessage) {
                alert(errormessage.responseText);
               
            }
        });
    }


    function getBack() {
        $("#divSummary").hide();
        $("#divDriver").show();
    }


    function release(DriverID, HoldID) {
       
        var data1 = { 'DriverID': DriverID, 'HoldID': HoldID };
        var data = JSON.stringify(data1);
       
        $.ajax({
            type: 'POST',
            data: data,
            url: '/Driver/ReleaseDriverDetails',
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            async: true,
            success: function (data) {
                alert("record Saved Successfully!");
                document.location = '@Url.Action("HoldPaymentDetails","Driver")'
            },
            error: function (errormessage) {
                alert(errormessage.responseText);

            }
        });
    }
</script>

