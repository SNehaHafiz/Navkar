<script>


    function ViewSummaryDrivers() {
        $("#diventrytable").hide();
        $("#divheader").hide();
        $("#DivSummary").show();
    }


    function getBack() {
        $("#diventrytable").show();
        $("#divheader").show();
        $("#DivSummary").hide();
    }






    function SaveFuelConsumption() {
        $("#btnSave").attr("disabled", true);
        var txtentryDate = document.getElementById('txtEntryDate').value;
        var ddlCostCenter = document.getElementById('ddlCostCenter').value;
        var txtBalQty = document.getElementById('txtBalQty').value;
        var txtIssueQty = document.getElementById('txtIssueQty').value;
        var txtReadFrom = document.getElementById('txtReadFrom').value;
        var txtReadingTo = document.getElementById('txtReadingTo').value;
        var ddlUnit = $("#ddlUnit option:selected").text();
        //var ddlVendorName = document.getElementById('ddlVendorName').value;
        var trailerid = document.getElementById('ddlTrailerNo').value;
        var ddlDriverName = document.getElementById('ddlDriverName').value;
        var ddlvehicleType = document.getElementById('ddlvehicleType').value;
        var txtRemark = document.getElementById('txtRemark').value;
        var ddlFuelType = $("#ddlFuelType option:selected").text();
        var CostCenterFor = document.getElementById('ddlCostCenter1').value;
        var DifferenceReading = document.getElementById('txtDiffReading').value;
        var VehiclePurpose = document.getElementById('ddlPurpose').value;
        var Vehiclesubgroup = document.getElementById('ddlvehiclesubgroup').value;

       // alert(parseFloat(txtBalQty))
        if (txtentryDate == "") {
            document.getElementById("txtEntryDate").style.borderColor = "red";
            alert('Please enter Entry Date!')
            event.preventDefault();
            return;
        }
        
        if (trailerid == "") {
            //  document.getElementById('ContainerNo').style.borderColor = "red"
            document.getElementById("ddlTrailerNo").style.borderColor = "red";
            alert('Please enter Trailer  No!')
            return;
        }

        if (txtBalQty == "") {
            //  document.getElementById('ContainerNo').style.borderColor = "red"
            document.getElementById("txtBalQty").style.borderColor = "red";
            alert('Please enter Balance Qty!')
            return;
        }

        if (txtIssueQty == "") {
            //  document.getElementById('ContainerNo').style.borderColor = "red"
            document.getElementById("txtIssueQty").style.borderColor = "red";
            alert('Please enter issue Qty!')
            return;
        }

        if (txtReadFrom == "") {
            //  document.getElementById('ContainerNo').style.borderColor = "red"
            document.getElementById("txtReadFrom").style.borderColor = "red";
            alert('Please enter Read From!')
            return;
        }

        if (txtReadingTo == "") {
            //  document.getElementById('ContainerNo').style.borderColor = "red"
            document.getElementById("txtReadingTo").style.borderColor = "red";
            alert('Please enter Read To!')
            return;
        }

        if (ddlvehicleType == "") {
            //  document.getElementById('ContainerNo').style.borderColor = "red"
            document.getElementById("ddlvehicleType").style.borderColor = "red";
            alert('Please Select  Vehicle  Type!')
            return;
        }

        if (ddlUnit == "--Select--") {
            //  document.getElementById('ContainerNo').style.borderColor = "red"
            document.getElementById("ddlUnit").style.borderColor = "red";
            alert('Please Select  Unit  Type!')
            return;
        }
        if (VehiclePurpose == "--Select--") {
            //  document.getElementById('ContainerNo').style.borderColor = "red"
            document.getElementById("ddlUnit").style.borderColor = "red";
            alert('Please Select  Purpose  Type!')
            return;
        }
        if (Vehiclesubgroup == "--Select--") {
            //  document.getElementById('ContainerNo').style.borderColor = "red"
            document.getElementById("ddlUnit").style.borderColor = "red";
            alert('Please Select  Sub Group  Type!')
            return;
        }

        if (ddlDriverName == "") {
            ddlDriverName = 0;
        }


        if (CostCenterFor == "") {
            //  document.getElementById('ContainerNo').style.borderColor = "red"
            document.getElementById("ddlvehicleType").style.borderColor = "red";
            alert('Please Select  Vehicle  Type!')
            return;
        }



        if (parseFloat(txtIssueQty) > parseFloat(txtBalQty)) {
                alert('Issue Qty can not greater than balance Qty..! ');
                return;
            }




            //if (txtReadFrom > txtReadingTo) {
            //    alert('Reading To can not less than Reading From..! ');
            //    return;
            //}






        data1 = {
            'txtentryDate': txtentryDate, 'ddlCostCenter': ddlCostCenter, 'trailerid': trailerid, 'txtBalQty': txtBalQty, 'txtIssueQty': txtIssueQty, 'ddlFuelType': ddlFuelType,
            'txtReadFrom': txtReadFrom, 'txtReadingTo': txtReadingTo, 'ddlDriverName': ddlDriverName, 'txtRemark': txtRemark,
            'ddlUnit': ddlUnit, 'ddlvehicleType': ddlvehicleType, 'CostCenterFor': CostCenterFor,
            'DifferenceReading': DifferenceReading, 'VehiclePurpose': VehiclePurpose, 'Vehiclesubgroup': Vehiclesubgroup

        };
        var data = JSON.stringify(data1);
       // alert(data);

    $.ajax({
        url: "/UpdateDischarge/SaveFuelConsumption",
        data: data,
    contentType: "application/json; charset=utf-8",
    type: "POST",
    dataType: "json",
    success: function (result) {
        if(JSON.stringify(result)==0)
        {
            alert('Fuel Entry already exist! ');
            $("#btnSave").attr("disabled", false);
        }
        else
        {
            alert('Record saved successfully');
            var r = confirm("Do you want to print?");
             if (r == true) {
                 $.ajax({
                     url: "/UpdateDischarge/PrintFuelConsumptions",
                     // data: data,
                     type: "POST",
                     contentType: "application/json; charset=utf-8",
                     // dataType: "json",
                     success: function (response) {

                         var myWindow = window.open("", "MsgWindow1");
                         myWindow.close();
                         var myWindow = window.open("", "MsgWindow1");
                         myWindow.document.write(response);
                         $("#btnSave").attr("disabled", false);
                     },

                     error: function (errormessage) {
                         alert(errormessage.responseText);
                     }
                 });
                } else {
                 window.location.href = '@Url.Action("InternalFuelStock", "UpdateDischarge")';
                 $("#btnSave").attr("disabled", false);
                }

            window.location.href = '@Url.Action("FuelConsumption", "UpdateDischarge")';
        }


    },
    error: function (errormessage) {
