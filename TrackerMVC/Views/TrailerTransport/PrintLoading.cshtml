
@{
    ViewBag.Title = "PrintLoading";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}


<html>
<head>
    <style>
        body {
            color: black;
        }

        * {
            box-sizing: border-box;
        }

        .clearfix::after {
            content: "";
            clear: both;
            display: table;
        }

        .box {
            float: left;
            width: 45%;
            padding: 0px;
        }

        .header h4 {
            text-align: center;
        }

        .subHeader h4 {
            text-align: center;
        }

        table {
            border-collapse: collapse;
        }

        table, th, td {
            border: 1px solid black;
        }
    </style>
</head>

<body>
    <div style="width:300px;height: 350px;border: 1px solid black">
        <div class="header">
            <h4>@ViewBag.ChaName</h4>
        </div>
        <div class="subHeader">
            <h4>Vehicle Reporting Slip</h4>
        </div>
        <div class="printBody clearfix">
            <div class="box">
                <table style="width:100% ;padding-left:2px">
                    <tbody>
                        <tr>
                            <th style="width:100px;text-align:left">Slip No :</th>
                            <th style="text-align:left">@ViewBag.PlanID</th>
                        </tr>
                        <tr>
                            <th style="width:100px;text-align:left">Vechile No :</th>
                            <th>@ViewBag.TrailerNo</th>
                        </tr>

                        <tr>
                            <th style="width:100px;text-align:left">From :</th>
                            <th style="text-align:left">@ViewBag.fromlocation</th>
                        </tr>
                        <tr>
                            <th style="width:100px;text-align:left">Vehicle InTime :</th>
                            <th style="text-align:left"></th>
                        </tr>
                        <tr>
                            <th style="width:100px;text-align:left">Container No :</th>
                            <th style="text-align:left">@ViewBag.Containerno</th>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="box">
                <table style="width:100%">
                    <tbody>
                        <tr>
                            <th style="width:100px;text-align:left">Slip Date :</th>
                            <th style="text-align:left">@ViewBag.PlanDate</th>
                        </tr>
                        <tr>
                            <th style="width:100px;text-align:left">Driver Name :</th>
                            <th style="text-align:left">@ViewBag.Drivername</th>
                        </tr>
                        @*<tr>
                                <th style="width:100px;text-align:left">To :</th>
                                <th style="text-align:left">@ViewBag.tolocation</th>
                            </tr>*@
                        <tr>
                            <th style="width:100px;text-align:left">Vehicle Out Time:</th>
                            <th style="text-align:left"></th>
                        </tr>
                        <tr>
                            <th style="width:100px;text-align:left">Size:</th>
                            <th style="text-align:left">@ViewBag.size</th>
                        </tr>

                    </tbody>
                </table>
            </div>
        </div>
        <div class="printBody clearfix">
            <div class="box">
                <h6 style="float: left">NCL Supervisor</h6>
            </div>
            <div class="box">
                <h6 style="float: left">@ViewBag.ChaName</h6>
            </div>
        </div>
    </div>
</body>
</html>

