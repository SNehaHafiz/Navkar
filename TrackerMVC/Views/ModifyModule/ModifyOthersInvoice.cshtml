                            ToID = $("#ToID_" + (k + 1)).val();

                            narration = $("#txtnarration_" + (k + 1)).val();

                            if (narration == 0) {
                                isValid = isValid && false;
                                $("#txtnarration_").addClass("is-invalid state-invalid");
                            } else {
                                $("#txtnarration_").removeClass("is-invalid state-invalid");
                            }

                            if (isValid == false) {
                                alert("Please fill all required field");
                                $("#global-loader").fadeOut("slow");
                                return;
                            }
                            tablearray.push({
                                'AssessNo': AssessNo, 'WorkYear': WorkYear, 'ContainerNo': ContainerNo,
                                'VehicleNo': VehicleNo, 'FromID': FromID, 'ToID': ToID, 'narration': narration, 'C2': C2
