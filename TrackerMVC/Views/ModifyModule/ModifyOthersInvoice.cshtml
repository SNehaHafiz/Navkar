<script>
      var EquipmentL = [];

    EquipmentLs = @Html.Raw(Json.Encode(@ViewBag.Location));
    EquipmentL = JSON.parse(EquipmentLs);


</script>

<script type="text/javascript">
    var ItemData = [];
    //$(document).ready(function () {
    //    Fetch();
    //});

    function Fetch() {
        debugger;
        var InvoiceNo = document.getElementById('txtinvoiceno').value;
        var WorkYear = document.getElementById('txtworkyear').value;

        var data1 = { 'InvoiceNo': InvoiceNo, 'WorkYear': WorkYear };

        data = JSON.stringify(data1);
        //  alert(data);
        $.ajax({
            type: 'POST',
            url: '/ModifyModule/GETOTHERMODIFYDETAILS',
            data: data,
            // data: "",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            async: true,
            success: function (data) {
                ItemData = data;
                if (data == "0" || data == "[]" || data == "") {
                    alert('No record found.');

                    return;
                }

                $('#example1').dataTable({

                    "aaData": data,
                    "columns": [
                        //Declare Entity Name

                        {

                            "data": "Series",
                            "render": function (data, type, row, meta) {

                                data = '<input type=\"checkbox\" name=\"checklist[]\" class=\"checklist\" id=\"checklist\"  check value="' + row.Series + '">';
                                return data;

                            }
                        },
                        { "data": "Series" },
                        { "data": "AssessNo" },
                        { "data": "WorkYear" },
                        { "data": "AccountName" },


                        {
                            "data": "ContainerNo",
                            "render": function (data, type, row, meta) {
                                data = "<input class=\"form-control\" style=\"width:200px\" id=\"txtcontainerno_" + row.Series + "\" value=\"" + row.ContainerNo + "\"  autocomplete=\"off\"/>";
                                return data;
                            }
                        },
                        {
                            "data": "VehicleNo",
                            "render": function (data, type, row, meta) {
                                data = "<input class=\"form-control\" style=\"width:200px\" id=\"VehicleNo_" + row.Series + "\" value=\"" + row.VehicleNo + "\"  autocomplete=\"off\"/>";
                                return data;
                            }
                        },
                        //end


                        {
                            "data": "FromID",
                            "render": function (data, type, row, meta) {

                                data = '<select  class="form-control" id="FromID_' + row.Series + '"  style="width:180px">'
                                for (j = 0; j < EquipmentL.length; j++) {
                                    if (row.FromID == EquipmentL[j].LocationID) {
                                        data += '<option value="' + EquipmentL[j].LocationID + '" selected> ' + EquipmentL[j].Location + '</option>'
                                    } else {
                                        data += '<option value="' + EquipmentL[j].LocationID + '"> ' + EquipmentL[j].Location + '</option>'
                                    }

                                }

                                data += '</selected>';
                                return data;

                            }

                        },

                        {
                            "data": "ToID",
                            "render": function (data, type, row, meta) {

                                data = '<select  class="form-control" id="ToID_' + row.Series + '"  style="width:180px">'
                                for (j = 0; j < EquipmentL.length; j++) {
                                    if (row.ToID == EquipmentL[j].LocationID) {
                                        data += '<option value="' + EquipmentL[j].LocationID + '" selected> ' + EquipmentL[j].Location + '</option>'
                                    } else {
                                        data += '<option value="' + EquipmentL[j].LocationID + '"> ' + EquipmentL[j].Location + '</option>'
                                    }

                                }

                                data += '</selected>';
                                return data;

                            }

                        },
                        { "data": "TransName" },

                        {
                            "data": "narration",
                            "render": function (data, type, row, meta) {
                                data = "<input class=\"form-control\" style=\"width:800px\" id=\"txtnarration_" + row.Series + "\" value=\"" + row.narration + "\"  autocomplete=\"off\"/>";
                                return data;
                            }
                        },
                        { "data": "C2", "className": "hiderow" }
                    ]
                });
            },
            error: function (errormessage) {
                alert(errormessage.responseText);
                $("#tracker-loader").fadeOut("slow");
            }
        });
    }

</script>



<script>
    function Update() {
        debugger;
        $("#tracker-loader").fadeIn("slow");
        var Remarks = $("#txtremarks").val();
        var CargoDesc = $("#txtcargodesc").val();
