                alert(errormessage.responseText);
                $("#tracker-loader").fadeOut("slow");
            }
        });
    }
</script>
<script>
    function UpdateJOM() {
        $("#global-loader").fadeIn("slow");
        debugger;
        var element = {};
        element.ContainerNo = $("#txtcontainerno").val().trim();
        element.ContainerTypeID = $("#ddlcontainertype").val().trim();
        element.Cargotypeid = $("#ddlCargotype").val().trim();
        element.Qty = $("#txtpkgs").val().trim();
        element.BL_Number = $("#txtblno").val().trim();
        element.SealNo = $("#txtsealno").val().trim();
        element.Tare_Weight = $("#txttarewt").val().trim();
        element.GrossWT = $("#txtgrosswt").val().trim();
        element.ISOID = $("#ddlISOCode").val().trim();
        element.Size = $("#ddlSize  option:selected").text();
        element.JoTypeId = $("#ddljotype").val().trim();
        element.Remarks = $("#txtremarks").val().trim();


        var isValid = true;
        if (element.ContainerTypeID == 0 ) {
            isValid = isValid && false;
            $("#ddlcontainertype").addClass("is-invalid state-invalid");
        } else {
            $("#ddlcontainertype").removeClass("is-invalid state-invalid");
        }

        if (element.Cargotypeid == 0) {
            isValid = isValid && false;
            $("#ddlCargotype").addClass("is-invalid state-invalid");
        }
        else {
            $("#ddlCargotype").removeClass("is-invalid state-invalid");
        }
        if (element.Qty == "") {
            isValid = isValid && false;
            $("#txtpkgs").addClass("is-invalid state-invalid");
        } else {
            $("#txtpkgs").removeClass("is-invalid state-invalid");
        }
        if (element.BL_Number == "") {
            isValid = isValid && false;
            $("#txtblno").addClass("is-invalid state-invalid");
        } else {
            $("#txtblno").removeClass("is-invalid state-invalid");
        }
        if (element.Remarks == "") {
            isValid = isValid && false;
            $("#txtremarks").addClass("is-invalid state-invalid");
        } else {
            $("#txtremarks").removeClass("is-invalid state-invalid");
        }
        if (element.ISOID == "") {
            isValid = isValid && false;
            $("#ddlISOCode").addClass("is-invalid state-invalid");
        } else {
            $("#ddlISOCode").removeClass("is-invalid state-invalid");
        }

        if (element.Size == "") {
            isValid = isValid && false;
            $("#ddlSize").addClass("is-invalid state-invalid");
        } else {
            $("#ddlSize").removeClass("is-invalid state-invalid");
        }
        if (element.SealNo == "") {
            isValid = isValid && false;
            $("#txtsealno").addClass("is-invalid state-invalid");
        } else {
            $("#txtsealno").removeClass("is-invalid state-invalid");
        }
        if (isValid == false) {
            alert("Please fill all required field");
            $("#global-loader").fadeOut("slow");
            return;
        }

        //Tax Validation



        var data = { 'Master': element };
        data = JSON.stringify(data);

        $.ajax({
            type: 'post',
            url: '/ModifyModule/UpdateJOBMDetails',
            data: data,
            async: false,
            contentType: "application/json; charset=utf-8",
            success: function (response) {

                $("#global-loader").fadeOut("slow");

                if (response.ResponseMessage != '') {
                    alert(response.ResponseMessage);
                    document.location = '@Url.Action("ModifyImportContainerD", "ModifyModule")';
                }
                else {
                    Swal.fire({
                        title: 'Error',
                        text: response.Message,
                        icon: 'error'
                    })
                }
            },
            error: function (error) {
                let str = error.responseText;
                var a = str.indexOf("<title>") + 7;
                var b = str.indexOf("</title>");
                str = str.substring(a, b);
                Swal.fire({
                    title: 'Error!',
                    text: str,
                    icon: 'error'
                });
            }
        });
    }
    function Clear() {
document.location = '@Url.Action("ModifyImportContainerD", "ModifyModule")';

    }
</script>