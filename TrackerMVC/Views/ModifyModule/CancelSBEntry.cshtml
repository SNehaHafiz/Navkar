<script type="text/javascript">
    function Fetch1() {
        debugger;
        var SBNo = document.getElementById('txtsbno').value;

        var data1 = { 'SBNo': SBNo };

        data = JSON.stringify(data1);
        $.ajax({
            type: 'POST',
            url: '/ModifyModule/GetSbDetailsWithCheck',
            data: data,
            // data: "",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            async: true,
            success: function (data) {

                if (data == "0" || data == "[]" || data == "") {
                    alert('No record found.');
                    return;
                }

                $('#example1').dataTable({
                    "destroy": true,
                    "bLengthChange": false,
                    "bPaginate": false,
                    "bFilter": false,
                    "paging": false,
                    "order": false,
                    "aaData": data,
                    "columns": [
                        //Declare Entity Name

                        {

                            "data": "Cancel",
                            "render": function (data, type, row, meta) {

                                data = '<input type=\"checkbox\" name=\"checklist[]\" class=\"checklist\" id=\"checklist\"  check value="' + row.EntryID + '">';
                                return data;

                            }
                        },
                    
                        { "data": "SBNO" },
                        { "data": "SBDate" },
                        { "data": "ContNo" },
                        { "data": "EntryID" },
                        { "data": "CargoDesc" },

                    ]
                });
            },
            error: function (errormessage) {
                alert(errormessage.responseText);
                $("#tracker-loader").fadeOut("slow");
            }
        });
    }

</script>
<script>
