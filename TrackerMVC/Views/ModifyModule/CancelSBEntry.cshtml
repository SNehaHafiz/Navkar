<script>
    function Update() {
        debugger;

        



        $("#tracker-loader").fadeIn("slow");
        var Remarks = $("#txtremarks").val();
        var isValid = true;



        if (Remarks == "") {
            isValid = isValid && false;
            $("#txtremarks").addClass("is-invalid state-invalid");
        } else {
            $("#txtremarks").removeClass("is-invalid state-invalid");
        }

        if (isValid == false) {
            alert("Please enter remarks");
            $("#tracker-loader").fadeOut("slow");
            return;
        }

        var r = confirm("Are you sure want to cancel this shipping bill ?");
        if (r == true) {
           

            var itemcount = checkItemcount();
            if (itemcount == false) {
                alert("No Record Found To Save");
            }
            else {
                var checkboxarray = [];
                $('input[type=checkbox]').each(function () {
                    if (this.checked) {
                        checkboxarray.push($(this).val());
                    }
                });
                //selected values will go in this tablearray
                var tablearray = [];
                var table = document.getElementById("example1");
                var row;
                for (var i = 1; i < table.rows.length; i++) {
                    row = table.rows[i];
                    for (var k = 0; k < checkboxarray.length; k++) {

                        //insert rows with which values has to pick
                        var SBNO = row.cells[1].innerText;
                        var EntryID = row.cells[4].innerText;

                        // insert with checked condition and declare all details
                        if (EntryID == checkboxarray[k]) {// take any unique or distinct value as in sp check boxs
                         //   alert("hiiii");
                            row = table.rows[i];
                            SBNO = row.cells[1].innerText;
                            EntryID = row.cells[4].innerText;
                            tablearray.push({
                                'SBNO': SBNO, 'EntryID': EntryID
                            })
                        }//
                    }//end k loop
                }//end i loops
            }//else part end
            var data1 = {
                'Debitdata': tablearray, 'Remarks': Remarks
            };
            var data = JSON.stringify(data1);
          //  alert(data);
            $.ajax({
                url: "/ModifyModule/CancelSBEntryDetails",
                data: data,
                type: "POST",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (data) {
                    alert(data);
                    document.location = '@Url.Action("CancelSBEntry", "ModifyModule")';
                },
                error: function (errormessage) {
                    alert(errormessage.responseText);
                }
            });
        }//end of main called function

        //Check Checkbox selected count
        function checkItemcount() {
            var table = $('#example1').DataTable();
            if (table.rows().count() == 0) {
                return false;
            }
            return true;
        }
    }
</script>
<script>
    $("#flowcheckall").click(function () {

        var oTableStaticFlow = $('#example1').DataTable();


        var cells = oTableStaticFlow.column(0).nodes(), // Cells from 1st column
            state = this.checked;

        for (var i = 0; i < cells.length; i += 1) {
            cells[i].querySelector("input[type='checkbox']").checked = state;
        }
    });
</script>